
<h2>List of Picture!</h2>
<br>
<table class="PostTable">
 <tr>
   <th>Title</th>
   <th>User</th>
 </tr>
<% @pictures.each do |picture| %>
 <tr>
   <td><%= picture.title %></td>
   <td><%= picture.user.name %></td>
   <td><%= link_to 'SHOW', picture_path(picture.id) %></td>
   <% if current_user.id == picture.user.id %>
   <td><%= link_to "EDIT", edit_picture_path(picture.id), data: { confirm: 'Can you really edit？' } %></td>
   <td><%= link_to 'DELETE', picture_path(picture.id), method: :delete ,data: { confirm: 'Can you really delete？' } %></td>
 </tr>
<% end %>
<% end %>
</table>
<br>
<button type="button" class="btn"><%= link_to 'Add new post', new_picture_path %></button>
