<h2>Post detail screen</h2>
<br>
<p>Title: <%= @picture.title %></p>
<br>
<p>Content: <%= @picture.content %></p>
<p>
  <%= image_tag @picture.image.url if @picture.image? %>
</p>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'I do not like', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'My favorites', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<br>
<br>
<%= link_to 'Return Post screen', pictures_path %>
